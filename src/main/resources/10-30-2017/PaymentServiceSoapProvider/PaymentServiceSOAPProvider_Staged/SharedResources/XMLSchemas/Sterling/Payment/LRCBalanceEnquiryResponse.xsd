<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	Project 	: OMSD3
	Date		: June 16th, 2015
	Author		: Cognizant Technology Solutions 
	Interface	: LRC Balance Enquiry Response from 'Payment Service/ADS' to 'Sterling OMS' via 'TIBCO'
-->
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:yfc="http://www.sterlingcommerce.com/documentation/YFS/LRCBalance/Response" xmlns:yfctype="http://www.sterlingcommerce.com/documentation/types" targetNamespace="http://www.sterlingcommerce.com/documentation/YFS/LRCBalance/Response" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xsd:annotation yfc:fileName="LRCBalanceEnquiryResponse.xsd" yfc:rootElement="LRCBalance">
		<xsd:appinfo source="yfc:structure">
			<LRCBalance hasAttributes="Y">
				<PaymentMethod hasAttributes="Y">
					<Extn hasAttributes="Y"/>
				</PaymentMethod>
				<Error hasAttributes="Y">
					<ErrorDetail hasAttributes="Y"/>
				</Error>
			</LRCBalance>
		</xsd:appinfo>
	</xsd:annotation>
	<xsd:import namespace="http://www.sterlingcommerce.com/documentation/types" schemaLocation="datatypes.xsd"/>
	<xsd:element name="LRCBalance">
		<xsd:complexType>
			<xsd:choice>
				<xsd:element name="PaymentMethod" minOccurs="0">
					<xsd:complexType>
						<!-- Updated as part of OMSD3 EPS change : START -->
						<xsd:all>
							<xsd:element name="Extn" minOccurs="0">
								<xsd:complexType>
									<xsd:attribute name="ExtnSVCMetaData" type="yfctype:Text-1500" use="optional"/>
									<xsd:attribute name="ExtnTransactionMetaData" type="yfctype:Text-1500" use="optional"/>
									<xsd:attribute name="ExtnPaymentTag" type="yfctype:Text-1000" use="optional"/>
								</xsd:complexType>
							</xsd:element>
						</xsd:all>	
						<!-- Updated as part of OMSD3 EPS change : END -->
						<xsd:attribute name="PaymentReference1" type="yfctype:Text-100" use="optional"/>
						<xsd:attribute name="PaymentReference2" type="yfctype:Text-100" use="optional"/>
						<xsd:attribute name="PaymentReference3" type="yfctype:Text-100" use="optional"/>
						<xsd:attribute name="PaymentReference4" type="yfctype:Text-100" use="optional"/>
						<xsd:attribute name="PaymentReference5" type="yfctype:Text-100" use="optional"/>
						<xsd:attribute name="PaymentReference6" type="yfctype:Text-100" use="optional"/>
						<xsd:attribute name="Currency" type="yfctype:Text-32" use="optional"/>
						<xsd:attribute name="FundsAvailable" type="yfctype:Money" use="required"/>
						<xsd:attribute name="PaymentTypeGroup" type="yfctype:Text-20" use="optional"/>
						<xsd:attribute name="PaymentType" type="yfctype:Text-20" use="required"/>
						<xsd:attribute name="SvcNo" type="yfctype:Text-1000" use="required"/>
					</xsd:complexType>
				</xsd:element>
				<xsd:element name="Error" minOccurs="0">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="ErrorDetail" minOccurs="0" maxOccurs="unbounded">
								<xsd:complexType>
									<xsd:attribute name="Detail" type="yfctype:Text-50" use="required"/>
								</xsd:complexType>
							</xsd:element>
						</xsd:sequence>
						<xsd:attribute name="ErrorType" type="yfctype:Text-50" use="required"/>
						<xsd:attribute name="ErrorMessage" type="yfctype:Text-200" use="required"/>
					</xsd:complexType>
				</xsd:element>
			</xsd:choice>
			<xsd:attribute name="EnvIdentifier" type="yfctype:Text-24" use="optional"/>
			<xsd:attribute name="RegIdentifier" type="yfctype:Text-24" use="optional"/>
			<xsd:attribute name="SourceSysID" type="yfctype:Text-50" use="optional"/>
			<xsd:attribute name="MsgTransactionID" type="yfctype:Text-50" use="optional"/>
			<xsd:attribute name="MsgTransactionTime" type="yfctype:TimeStamp" use="optional"/>
			<xsd:attribute name="EnterpriseCode" type="yfctype:String" use="optional"/>
		</xsd:complexType>
	</xsd:element>
</xsd:schema>